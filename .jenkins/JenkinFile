pipeline {
    agent any

    stages {
        environment {
            AWS_ACCESS_KEY = credentials('AWS_ACCESS_KEY')
            AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
            AWS_REGION = credentials('AWS_REGION')
            ECR_REPOSITORY = credentials('ECR_REPOSITORY')
            AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
            IMAGE_TAG = 'latest'
        }
        stage('Continuous Integration') {
            steps 
            {
                echo "Linting repository"
                echo "Running unit tests"
            }
        }

        stage('Continuous Delivery') {
            steps 
            {
                sh 'aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com'
                sh 'sudo docker build -t $ECR_REPOSITORY:$IMAGE_TAG .'
                sh 'sudo docker push $ECR_REPOSITORY:$IMAGE_TAG'
            }
        }

        stage('Continuous Deployment') {
            steps 
            {
                echo 'Running Model Endpoint Test'
            }
        }
    }
}