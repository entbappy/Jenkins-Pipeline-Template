pipeline {
    agent any
    environment {
        ECR_REPOSITORY = credentials('ECR_REPOSITORY')
        AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
        AWS_ACCESS_KEY = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_KEY = credentials('AWS_SECRET_KEY')
        IMAGE_TAG = 'latest'
      }

    stages {
        stage('Continuous Integration') {
            steps 
            {
                echo "Linting repository"
                echo "Running unit tests"
            }
        }


        stage('Continuous Delivery') {
            steps 
            {   
                sh 'aws configure set aws_access_key_id ${AWS_ACCESS_KEY} --profile ubuntu'
                sh 'aws configure set aws_secret_access_key ${AWS_SECRET_KEY} --profile ubuntu'
                sh 'aws configure set region ap-south-1 --profile ubuntu'
                sh 'aws configure set output "text" --profile ubuntu'
                sh 'docker login -u AWS -p $(aws ecr get-login-password --region ap-south-1) ${AWS_ACCOUNT_ID}.dkr.ecr.ap-south-1.amazonaws.com'
                sh 'docker build -t ${ECR_REPOSITORY}:${IMAGE_TAG} .'
                sh 'docker push ${ECR_REPOSITORY}:${IMAGE_TAG}'
            }
        }

        stage('Continuous Deployment') {
            steps 
            {
                echo 'Running Model Endpoint Test'
            }
        }
    }
}